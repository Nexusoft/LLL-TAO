lisp enable {
    itr = yes
    etr = yes
    rtr = no
    map-server = no
    map-resolver = no
    ddt-node = no
}
lisp debug {
    etr = no
    core = no
    map-resolver = no
    ddt-node = no
    rtr = no
    map-server = no
    itr = no
}
lisp user-account {
    username = root
    password = 
    super-user = yes
}
lisp xtr-parameters {
    rloc-probing = yes
    data-plane-security = no
    nat-traversal = yes
    nonce-echoing = no
    data-plane-logging = no
    flow-logging = no
}
lisp map-resolver {
    dns-name = node1.nexusoft.io
}
lisp map-resolver {
    dns-name = node2.nexusoft.io
}
lisp map-server {
    dns-name = node1.nexusoft.io
    authentication-key = [21]testnet1
}
lisp map-server {
    dns-name = node2.nexusoft.io
    authentication-key = [21]testnet1
}
lisp database-mapping {
    prefix {
        instance-id = <iid>
        eid-prefix = <v4-eid>/32
    }
    prefix {
        instance-id = <iid>
        eid-prefix = <v6-eid>/128
    }
    rloc {
        interface = eth0
    }
    rloc {
        address = <v4-rloc>
    }    
}
lisp group-mapping {
    group-name = ipv4-multicast
    instance-id = <iid>
    group-prefix = 224.0.0.0/8
}
#
# Do short-cuts for IPv6 non-crypto EIDs only.
#            
lisp map-cache {
   prefix {
       instance-id = <iid>
       eid-prefix = fe::/8
       send-map-request = yes
    }
}
